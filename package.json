{
  "name": "@bscop/react-tabs",
  "version": "1.0.0",
  "description": "Accessible tabs (in React).",
  "main": "package/dist/index.js",
  "module": "package/dist/index.es.js",
  "types": "package/src/index.d.ts",
  "scripts": {
    "badge:coverage": "npm run test:coverage && codecov",
    "prebuild": "rm -rf ./package/dist",
    "build": "npm run build:css && npm run build:js",
    "build:css": "node-sass package/src/style.scss package/dist/style.css",
    "build:js": "rollup -c rollup.config.js",
    "build:storybook": "build-storybook -o docs",
    "lint": "eslint 'package/**'",
    "dev": "npm run build:css -- --watch | npm run build:js -- --watch | npm run test:unit -- --watch",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "release": "standard-version",
    "storybook": "start-storybook -p 6006",
    "test": "npm run lint && npm run test:types && npm run test:unit",
    "test:debug": "node --inspect $(npm bin)/jest --watch --no-cache --runInBand",
    "test:types": "tsc --noEmit -p package/src",
    "test:unit": "jest --runInBand --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brunoscopelliti/react-tabs.git"
  },
  "directories": {
    "src": "package/src"
  },
  "files": [
    "package/dist",
    "package/src/index.d.ts",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "keywords": [],
  "author": "Bruno Scopelliti",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/brunoscopelliti/react-tabs/issues"
  },
  "homepage": "https://github.com/brunoscopelliti/react-tabs#readme",
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-react": "^7.13.13",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@storybook/addon-a11y": "^6.2.9",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/react": "^6.2.9",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.7",
    "@testing-library/react-hooks": "^6.0.0",
    "@testing-library/user-event": "^13.1.9",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.5",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "codecov": "^3.8.2",
    "eslint": "^7.26.0",
    "eslint-config-bruno": "^3.0.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^4.4.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "node-sass": "^6.0.0",
    "rollup": "^2.48.0",
    "standard-version": "^9.3.0"
  },
  "peerDependencies": {
    "prop-types": "^15.7.2",
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "dependencies": {
    "@bscop/use-id": "^2.0.0"
  }
}
